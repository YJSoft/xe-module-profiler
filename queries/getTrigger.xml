<query id="getTrigger" action="select">
	<tables>
		<table name="module_trigger" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="equal" column="trigger_name" var="trigger_name" />
		<condition operation="in" column="trigger_name" var="trigger_names" pipe="or" />
		<group pipe="and">
			<condition operation="equal" column="module" var="module" />
			<condition operation="in" column="module" var="modules" pipe="or" />
		</group>
		<group pipe="and">
			<condition operation="equal" column="type" var="type" />
			<condition operation="in" column="type" var="types" pipe="or" />
		</group>
		<group pipe="and">
			<condition operation="equal" column="called_method" var="called_method" />
			<condition operation="in" column="called_method" var="called_methods" pipe="or" />
		</group>
		<group pipe="and">
			<condition operation="equal" column="called_position" var="called_position" />
			<condition operation="in" column="called_position" var="called_positions" pipe="or" />
		</group>
	</conditions>
	<navigation>
		<index var="sort_index" default="module" order="asc" />
	</navigation>
</query>